<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="indianrail.robosoft.com.indianrail">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PnrStatusActivity" />
        <activity android:name=".SearchTrainActivity" />
        <activity android:name=".TrainStatusActivity" />
        <activity
            android:name=".TrainByNoActivity"
            android:label="@string/title_activity_train_by_no"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".TrainRouteActivity"
            android:label="@string/title_activity_train_route"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>